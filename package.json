{
  "name": "jekyll-editor",
  "version": "0.0.1",
  "description": "Desktop application for managing static websites",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf dist .nyc-output coverage",
    "lint": "tslint --force --fix \"src/**/*.ts\" \"test/**/*.ts\"",
    "prebuild": "npm run lint",
    "build": "npm run clean && echo Using TypeScript && tsc --version && tsc --pretty",
    "pretest": "npm run build",
    "test": "mocha",
    "testOnly": "mocha",
    "test:coverage": "nyc npm run test && open coverage/index.html",
    "prepublish": "npm test",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "watch:launch": "nodemon  dist/index",
    "prestart": "npm build",
    "start": "electron dist/index"
  },
  "author": "Zoltan",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.2"
  },
  "devDependencies": {
    "@types/chai": "latest",
    "@types/electron": "latest",
    "@types/gulp": "latest",
    "@types/gulp-newer": "latest",
    "@types/gulp-sourcemaps": "latest",
    "@types/gulp-typescript": "latest",
    "@types/lodash": "latest",
    "@types/merge2": "^0.3.29",
    "@types/mocha": "latest",
    "@types/node": "latest",
    "@types/sinon": "latest",
    "@types/sinon-chai": "latest",
    "chai": "latest",
    "coveralls": "latest",
    "electron": "latest",
    "gulp": "latest",
    "gulp-newer": "latest",
    "gulp-sourcemaps": "latest",
    "gulp-typescript": "latest",
    "merge2": "^1.0.2",
    "mocha": "latest",
    "nodemon": "latest",
    "nyc": "latest",
    "rimraf": "latest",
    "sinon": "latest",
    "sinon-chai": "latest",
    "ts-node": "latest",
    "tslint": "latest",
    "typescript": "latest"
  }
}
